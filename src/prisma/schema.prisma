generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "file:./dev.db"
}

model User {
  id    String     @id @default(uuid())
  socketId String
  email String  @unique
  password String
  username  String?
  messages Message[]
}

model Message {
    id  Int     @id @default(autoincrement())
    content String
    senderId String
    receipientId String
    createdAt String
}