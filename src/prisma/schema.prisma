generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  socketId     String?
  email        String    @unique
  password     String
  avatar       String?
  username     String    @unique @db.VarChar(15)
  messages     Message[]
  Rooms        Room[]
  createdAt    DateTime  @default(now()) @db.Timestamp(6)
  updatedAt    DateTime  @updatedAt
  refreshToken String?
}

model Message {
  id           String @id @default(uuid())
  content      String
  senderId     String
  sender       User   @relation(fields: [senderId], references: [id])
  receipientId String
  createdAt    String
}

model Room {
  id           String   @id @default(uuid())
  name         String   @unique @db.VarChar(25)
  description  String   @db.VarChar(100)
  admin        String
  avatar       String
  users        User[]
  messageCount Int
  createdAt    DateTime @default(now()) @db.Timestamp(6)
  updatedAt    DateTime @updatedAt
  userId       String
}
